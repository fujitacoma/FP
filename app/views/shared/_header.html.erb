<%# CSS・・・assets/stylesheets/shared/header.css %>
<header class='top-page-header'>
  <div class='header-contents'>
    <%= link_to image_tag("title_logo.png", class:"fp-icon") %>
    <div class='nav'>
      <ul class='lists'>
        <% if customer_signed_in? %>
          <li><%= link_to current_customer.nickname, "#", class: "customer-nickname" %></li>
          <li><%= link_to 'Logout', destroy_customer_session_path, method: :delete, class: "logout" %></li>
        <% elsif admin_signed_in? %>
          <li><%= link_to current_admin.nickname, "#", class: "admin-nickname" %></li>
          <li><%= link_to 'Logout', destroy_admin_session_path, method: :delete, class: "logout" %></li>
        <% else %>
          <li><%= link_to 'Login', new_customer_session_path, class: "login" %></li>
          <li><%= link_to 'Signup', new_customer_registration_path, class: "sign-up" %></li>
        <% end %>
      </ul>
    </div>
  </div>
</header>